{
    "name": "my-hono-serverless-app",
    "version": "0.1.0",
    "type": "module",
    "private": true,
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev": "bun --watch src/server.ts",
        "start": "bun src/server.ts",
        "lint": "eslint . --ext .ts",
        "typecheck": "tsc --noEmit",
        "build": "tsc -p tsconfig.json",
        "deploy": "zip -r lambda.zip dist && aws lambda update-function-code --function-name MyLambda --zip-file fileb://lambda.zip",
        "db:generate": "drizzle-kit generate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "@hono/node-server": "^1.14.4",
        "@neondatabase/serverless": "^0.10.0",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.39.1",
        "hono": "^4.3.6",
        "pg": "^8.11.5"
    },
    "devDependencies": {
        "@types/node": "^20.11.20",
        "drizzle-kit": "^0.30.4",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "prettier": "^3.5.3",
        "tsx": "^4.7.1",
        "typescript": "^5.3.3"
    }
}
